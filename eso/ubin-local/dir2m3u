for x in */; do 
	name=`echo $x | sed -r 's/[- \/0-9]+//g;s/^(.*)([A-Z]+[a-z]+)$/\l\2/g'`
	find "$x" -iname '*.mp3' | sed '1i#M3UEXT' > ${name}.m3u
	echo $x"^^"
done


