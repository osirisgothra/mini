#!/bin/zsh
# vim ft=zsh:fen:fdm=marker:fmr={{{,}}}:fcl=all:fdo=insert:cc=80:sw=4:ts=4:noet:more:ruler:ls=2
#
#    dir2m3u
#    materialize m3u file(s) from subdirs with media in them
#    mini
#    eso/ubin-local
