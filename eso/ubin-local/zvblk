TEMP=`getopt -o v --long verbose \
     -n "$0" -- "$@"`
if [ $? != 0 ] ; then echo "Terminating..." >&2 ; exit 1 ; fi
unset devs

# Note the quotes around `$TEMP': they are essential!
eval set -- "$TEMP"
verbose=0
function echo() { builtin true "$@"; }

while true ; do
	case "$1" in
		-v|--verbose)
	unfunction echo
echo "verbose mode enabled"; verbose=1; 
			shift ;;
		--) shift ; break ;;
		*) echo "$0 -- Internal error! (bad copy or storage issue?)" ; exit 1 ;;
	esac
done
echo "Remaining arguments ignored:"
for arg do echo '--> '"\`$arg'" ; done
echo "setting up items (will be in \$devs[])..."
lsblk -no NAME,TYPE,PKNAME,FSTYPE,LABEL -P | sed -r 's/^NAME="([^"]*)"/typeset -ga devs; devs+=( "blkdev_\1" ); typeset -gA blkdev_\1=( /g;s/([A-Z]+)="/"\1" "/g;s/$/ )/g' | source /proc/self/fd/0
echo "set up $#devs devices please see \$devs[] for values!"