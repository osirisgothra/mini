package Tie::Options;

use Carp;
use Path::Tiny;
use Cwd;
use JSON;

sub new($classname, $file, $fmt)
{
    my $self = { uuid => UUID::uuid(),
                 filename => $file,
                 format => $fmt,
                 options => { created => 1 },
                 changed => 1,
               };
    if ( bless($self,$classname) ) {
        say("created a new class (UUID=".$self->uuid.")");
        return $self
    }
    confess("class creation FAILED (extra info=$! code=$?)");
}
sub persist($self,$writing)
{
    if ($writing)
    {

    }
    else
    {
    }
}
