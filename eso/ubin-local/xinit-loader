use warnings;
use v5.20;
use strict "subs";
use POSIX ":sys_wait_h";
my @bg_procs = qw! xrandr-normaldpi drop xgamma-normalgamma i3 !;
for my $bgp (@bg_procs) {
	exec($bgp) if ( ( $bgp =~ m/i3/g) || !fork() );	}