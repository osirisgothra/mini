DEFAULT_WT_TIMEOUT=12:24:36

if [ "$1" != "" ] && echo $1 | grep '^[0-9]{1,3}:[0-9]{2}:[0-9]{2}$' -Pq; then
	echo "timeout format verified ok"
else
	echo -n "timeout variable not in the format of [(hh)h:mm:ss]!  failing back to default: "
	set -- $DEFAULT_WT_TIMEOUT
	echo "$1"
fi

H=`echo $1 | grep -Po "^[0-9]{1,3}(?=:)"`
M=`echo $1 | grep -Po "(?<=:)[0-9]{2}(?=:)"`
S=`echo $1 | grep -Po "(?<=:)[0-9]{2}$"`


